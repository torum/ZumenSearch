            <Grid >
                <Frame x:Name="NavigationFrame" Margin="{StaticResource NavigationViewPageContentMargin}" NavigationFailed="NavigationFrame_NavigationFailed"/>
            </Grid>

        </NavigationView>




    </Grid>
</Page>
