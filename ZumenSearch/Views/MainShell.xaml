<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ZumenSearch.Views.MainShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZumenSearch.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Canvas.ZIndex="1" Height="46" IsHitTestVisible="True" VerticalAlignment="Top" Margin="0,0,0,0">
            <Image Source="/Assets/App.ico"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Width="16"
                   Height="16"
                   Margin="0,2,0,0" />
            <TextBlock x:Name="AppTitleBarText"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="28,0,0,0"
                       Text="ZumenSearch"/>
        </Grid>


        <NavigationView x:Name="NavigationViewControl" Loaded="NavigationViewControl_Loaded" ItemInvoked="NavigationViewControl_ItemInvoked" Grid.Row="1" Canvas.ZIndex="0" Margin="0,-46,0,0" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="True" IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}" IsSettingsVisible="True" ExpandedModeThresholdWidth="1280" OpenPaneLength ="200" DisplayModeChanged="NavigationViewControl_DisplayModeChanged" Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
            <NavigationView.Resources>
            </NavigationView.Resources>
            <NavigationView.MenuItems>
                <!--
                <NavigationViewItemHeader Content="賃貸"/>
                -->

                <NavigationViewItem Tag="Rent" Content="賃貸" ToolTipService.ToolTip="賃貸総合検索" IsExpanded="True">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe80f;"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>

                        <!--  -->
                        <NavigationViewItem Tag="RentResidentials" Content="住居用" ToolTipService.ToolTip="賃貸住居用">
                            <NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe7c3;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <!--  -->
                        <NavigationViewItem Tag="RentCommercials" Content="事業用" ToolTipService.ToolTip="賃貸事業用">
                            <NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe7c3;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <!--  -->
                        <NavigationViewItem Tag="RentParkings" Content="駐車場" ToolTipService.ToolTip="賃貸駐車場">
                            <NavigationViewItem.Icon>
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe7c3;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItemSeparator />
                        
                        <NavigationViewItem Tag="RentOwners" Content="貸主" ToolTipService.ToolTip="貸主" Icon="OtherUser"/>

                    </NavigationViewItem.MenuItems>

                </NavigationViewItem>


                
                <!--
                <NavigationViewItemHeader Content="売買"/>
                -->

                <!-- <NavigationViewItemSeparator /> -->
                <NavigationViewItem Tag="Brokers" Content="宅建業者" ToolTipService.ToolTip="宅建業者" Icon="OtherUser">
                </NavigationViewItem>


            </NavigationView.MenuItems>
