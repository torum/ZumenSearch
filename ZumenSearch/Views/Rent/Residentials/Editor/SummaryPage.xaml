                    <TextBox Header="備考" Margin="0,24,0,0"
    TextWrapping="Wrap" AcceptsReturn="True" IsSpellCheckEnabled="False"
     MinWidth="400" MinHeight="160" MaxHeight="160" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                </StackPanel>
            </ScrollViewer>
            
        </Grid>
    </Grid>
</Page>
