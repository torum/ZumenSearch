<Window x:Class="ZumenSearch.Views.RentLivingBuildingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZumenSearch.Views"
        xmlns:common="clr-namespace:ZumenSearch.Common"
        xmlns:helper="clr-namespace:ZumenSearch.Helper"
        xmlns:vms="clr-namespace:ZumenSearch.ViewModels" 
        xmlns:models="clr-namespace:ZumenSearch.Models" 
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vms:RentLivingBuildingViewModel}"
        SnapsToDevicePixels="true"
        BorderThickness="0"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundColorBrush}"
        Width="860" Height="650"
        MinWidth="860" MinHeight="240"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="3"/>
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource WindowMainPanelStyle}">
        <Grid x:Name="BackgroundGrid" Background="{DynamicResource BoardBackgroundColorBrush}" UseLayoutRounding="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="836"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- アプリタイトルバー -->
            <Grid x:Name="AppTitleBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- Window icon/title -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Label Content="賃貸住居用：建物" Style="{DynamicResource DefaultLabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6 0 0 0" />
                    <Label Content="{Binding RentLivingEdit.StatusIsNew}" Style="{DynamicResource DefaultLabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 0 6 0"/>
                </StackPanel>

                <!-- Info space -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                </StackPanel>

                <!-- System icons -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Margin="0" Background="{DynamicResource BoardBackgroundColorBrush}">

                    <Label Content="{Binding RentLivingEdit.StatusIsDirty}" Style="{DynamicResource DefaultLabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.6" Margin="6 0 12 1"/>

                    <Button x:Name="SaveButton" Style="{DynamicResource PathSysButton}" Command="{Binding SaveCommand}" ToolTip="登録" WindowChrome.IsHitTestVisibleInChrome="True" Content="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"></Button>

                    <Button x:Name="MinimizeButton" Style="{StaticResource PathSysButton}" Click="MinimizeButton_Click" Visibility="Collapsed">
                        M20,14H4V10H20
                    </Button>

                    <Button x:Name="RestoreButton" Style="{StaticResource PathSysButton}" Click="RestoreButton_Click" Visibility="Collapsed">
                        M4,8H8V4H20V16H16V20H4V8M16,8V14H18V6H10V8H16M6,12V18H14V12H6Z
                    </Button>

                    <Button x:Name="MaxButton" Style="{StaticResource PathSysButton}" Click="MaxButton_Click" Visibility="Collapsed">
                        M4,4H20V20H4V4M6,8V18H18V8H6Z
                    </Button>

                    <Button x:Name="CloseButton" Style="{StaticResource PathSysButtonClose}" Click="CloseButton_Click">
                        M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z
                    </Button>

                </StackPanel>

            </Grid>

            <!-- エラー通知エリア -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Visibility="{Binding ShowErrorDialog, Converter={StaticResource BoolToVisibilityCollapsedConverter}}" Background="#FFDFD991">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBox Padding="3" Margin="6" Text="{Binding ErrorText,Mode=OneWay}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch"></TextBox>
                <Button x:Name="ButtonCloseErrorDialog" FontFamily="Segoe UI Symbol" Content="&#57610;" Command="{Binding CloseErrorCommand}" Grid.Row="0" Grid.Column="1" Width="24" Padding="3" Margin="6" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
                <!-- Symbol Enum
             https://docs.microsoft.com/en-us/uwp/api/windows.ui.xaml.controls.symbol?view=winrt-19041
            -->
            </Grid>

            <!-- 賃貸物件住居用の編集 -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="836"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Row="0" Grid.Column="0" Margin="0 0 0 12" Style="{DynamicResource TopMenuTabControlStyle}">
                    
                    <!-- 概要 -->
                    <TabItem Width="120" Style="{DynamicResource TopMenuTabItemStyle}" Background="{DynamicResource WindowBackgroundColorBrush}">
                        <TabItem.Header>
                            <Label Content="概要" Style="{DynamicResource TabMenuLabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </TabItem.Header>
                        
                        <Border Background="{DynamicResource WindowBackgroundColorBrush}">
                            <Grid Margin="0 12 0 0">

                                <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 物件名 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="6 0 6 0">

                                                <GroupBox Header="物件名" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                    <StackPanel>
                                                        <TextBox Text="{Binding RentLivingEdit.Name, UpdateSourceTrigger=PropertyChanged}" Margin="6" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>
                                                    </StackPanel>
                                                </GroupBox>

                                            </StackPanel>

                                            <!-- 物件種目・建物管理 -->
                                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="6 0 6 0" Orientation="Horizontal">

                                                <GroupBox Header="物件種目" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                    <ComboBox SelectedIndex="-1" Margin="6" Width="140" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <ComboBoxItem>アパート</ComboBoxItem>
                                                        <ComboBoxItem>マンション</ComboBoxItem>
                                                        <ComboBoxItem>一戸建て</ComboBoxItem>
                                                        <ComboBoxItem>テラスハウス</ComboBoxItem>
                                                        <ComboBoxItem>タウンハウス</ComboBoxItem>
                                                        <ComboBoxItem>シェアハウス</ComboBoxItem>
                                                        <ComboBoxItem>寮・下宿</ComboBoxItem>
                                                    </ComboBox>
                                                </GroupBox>

                                                <GroupBox Header="所有権" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                    <!--
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <RadioButton Content="建物一棟" GroupName="OwnershipType" IsChecked="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.All}, Converter={StaticResource EnumBooleanConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="6"/>
                                                                            <RadioButton x:Name="RadioButtonOwnershipType" Content="区分所有" GroupName="OwnershipType" IsChecked="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.Unit}, Converter={StaticResource EnumBooleanConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="6"/>
                                                                        </StackPanel>
                                                                        -->
                                                    <ComboBox SelectedIndex="-1" Margin="6" Width="110" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <ComboBoxItem IsSelected="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.All}, Converter={StaticResource EnumBooleanConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">建物一棟</ComboBoxItem>
                                                        <ComboBoxItem x:Name="ButtonOwnershipType" IsSelected="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.Unit}, Converter={StaticResource EnumBooleanConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">区分所有</ComboBoxItem>
                                                    </ComboBox>
                                                </GroupBox>
                                                
                                                <GroupBox Header="建物管理" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <ComboBox SelectedIndex="-1" Margin="6" Width="110" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                            <ComboBoxItem>自社管理</ComboBoxItem>
                                                            <ComboBoxItem>貸主管理</ComboBoxItem>
                                                            <ComboBoxItem>他社管理</ComboBoxItem>
                                                            <ComboBoxItem>その他/不明</ComboBoxItem>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </GroupBox>

                                            </StackPanel>

                                            <!-- 所在地 -->
                                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 所在地 -->
                                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="6 0 0 0">

                                                    <GroupBox Header="所在地" Padding="0 0 0 0" Style="{DynamicResource GroupBoxStyle}">
                                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                                            <TextBox Text="{Binding RentLivingEdit.Location, UpdateSourceTrigger=PropertyChanged}" Width="514" Margin="6" HorizontalAlignment="Left" VerticalAlignment="Bottom"></TextBox>
                                                        </StackPanel>
                                                    </GroupBox>

                                                    <GroupBox Header="所在地" Padding="6" Visibility="Collapsed">
                                                        <StackPanel>

                                                            <StackPanel Orientation="Horizontal">
                                                                <StackPanel>
                                                                    <Label Content="〒"/>
                                                                    <TextBox Text="{Binding RentLivingEdit.PostalCode, UpdateSourceTrigger=PropertyChanged}" Margin="6 0 6 6" Width="66" HorizontalAlignment="Left"></TextBox>
                                                                </StackPanel>

                                                                <StackPanel>
                                                                    <Label Content="都道府県"/>
                                                                    <TextBox Text="" Margin="6 0 6 6" Width="90" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
                                                                    <ComboBox Margin="6 0 6 6" Width="90" HorizontalAlignment="Left">

                                                                    </ComboBox>
                                                                </StackPanel>

                                                            </StackPanel>

                                                            <StackPanel>
                                                                <Label Content="市区町村"/>
                                                                <TextBox Text="" Margin="6 0 6 6" Width="169" HorizontalAlignment="Left"></TextBox>
                                                            </StackPanel>

                                                            <StackPanel>
                                                                <Label Content="町域"/>
                                                                <TextBox Text="" Margin="6 0 6 6" Width="200" HorizontalAlignment="Left"></TextBox>
                                                            </StackPanel>

                                                            <StackPanel Orientation="Horizontal">
                                                                <StackPanel>
                                                                    <Label Content="字・丁目"/>
                                                                    <TextBox Text="" Margin="6 0 6 6" Width="169" HorizontalAlignment="Left"></TextBox>
                                                                </StackPanel>

                                                            </StackPanel>

                                                            <StackPanel>
                                                                <Label Content="番地・号"/>
                                                                <TextBox Text="" Margin="6 0 6 6" Width="110" HorizontalAlignment="Left"></TextBox>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </GroupBox>

                                                </StackPanel>

                                                <!-- 所在地詳細 -->
                                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="6 0 6 0" HorizontalAlignment="Left">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                                        <GroupBox Header="所在地詳細" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">

                                                            <Button VerticalAlignment="Center" Content="所在地設定" Margin="6" Padding="3" Width="110" HorizontalAlignment="Left" />

                                                        </GroupBox>

                                                        <GroupBox Header="地図表示" Padding="0 0 6 0" Style="{DynamicResource GroupBoxStyle}">

                                                            <Button VerticalAlignment="Center" Content="マップで表示" Margin="6" Padding="3" Width="110" HorizontalAlignment="Left" />

                                                        </GroupBox>

                                                    </StackPanel>
                                                </StackPanel>
                                                
                                            </Grid>
                                            
                                        </Grid>

                                        <!-- 交通１・２・３ -->
                                        <Border Grid.Row="2" Grid.Column="0" VerticalAlignment="Stretch" Margin="0" BorderThickness="0 6 3 0" BorderBrush="{DynamicResource BoardBackgroundColorBrush}">
                                            
                                            <TabControl Height="395" Margin="6 0 0 0" VerticalAlignment="Top" Style="{DynamicResource EditingTabControlStyle}">

                                                <TabItem Header="交通１" Style="{DynamicResource EditingTabItemStyle}">
                                                    
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Margin="6 12 6 0">
                                                            <GroupBox Header="電車" Padding="6 12 6 6" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="沿線" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="{Binding RentLivingEdit.TrainStation1}" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>

                                                                </StackPanel>
                                                            </GroupBox>
                                                            <GroupBox Header="バス" Padding="6 12 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="バス停名" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="バス停から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 6">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </GroupBox>
                                                        </StackPanel>

                                                    </ScrollViewer>

                                                </TabItem>
                                                
                                                <TabItem Header="交通２" Style="{DynamicResource EditingTabItemStyle}">

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Margin="6 12 6 0">
                                                            <GroupBox Header="電車" Padding="6 12 6 6" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="沿線" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="{Binding RentLivingEdit.TrainStation2}" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>

                                                                </StackPanel>
                                                            </GroupBox>
                                                            <GroupBox Header="バス" Padding="6 12 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="バス停名" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="バス停から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 6">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </GroupBox>
                                                        </StackPanel>

                                                    </ScrollViewer>

                                                </TabItem>
                                                
                                                <TabItem Header="交通３" Style="{DynamicResource EditingTabItemStyle}">

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Margin="6 12 6 0">
                                                            <GroupBox Header="電車" Padding="6 12 6 6" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="沿線" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="{Binding RentLivingEdit.TrainStation3}" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="最寄り駅から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>

                                                                </StackPanel>
                                                            </GroupBox>
                                                            <GroupBox Header="バス" Padding="6 12 6 0" Style="{DynamicResource GroupBoxStyle}">
                                                                <StackPanel>
                                                                    <Label Content="バス停名" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <TextBox Text="" Margin="6 6 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                    <Label Content="バス停から徒歩" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    <StackPanel Orientation="Horizontal" Margin="6 6 12 6">
                                                                        <TextBox Text="" Width="60" Margin="0 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                        <Label Content="分" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </GroupBox>
                                                        </StackPanel>

                                                    </ScrollViewer>
                                                    
                                                </TabItem>

                                            </TabControl>
                                            
                                        </Border>

                                        <!-- 建物 -->
                                        <Border Grid.Row="2" Grid.Column="1" VerticalAlignment="Stretch" Margin="0" BorderThickness="3 6 0 0" BorderBrush="{DynamicResource BoardBackgroundColorBrush}">
                                            
                                            <TabControl Height="395" Margin="6 0 0 0" VerticalAlignment="Top" Style="{DynamicResource EditingTabControlStyle}">
                                                
                                                <!-- 建物概要 -->
                                                <TabItem Header="建物概要" Style="{DynamicResource EditingTabItemStyle}">

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Margin="6 12 6 0">

                                                            <StackPanel Margin="6 0 6 0">

                                                                <StackPanel Orientation="Horizontal" Margin="0">
                                                                    
                                                                    <GroupBox Header="建物構造" Padding="6" Style="{DynamicResource GroupBoxStyle}">
                                                                        <ComboBox SelectedIndex="-1" Margin="6 6 6 6" Width="250" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                                            <ComboBoxItem>木造</ComboBoxItem>
                                                                            <ComboBoxItem>ブロック造</ComboBoxItem>
                                                                            <ComboBoxItem>軽量鉄骨造</ComboBoxItem>
                                                                            <ComboBoxItem>鉄骨造</ComboBoxItem>
                                                                            <ComboBoxItem>鉄筋コンクリート(RC)造</ComboBoxItem>
                                                                            <ComboBoxItem>鉄骨鉄筋コンクリート(SRC)造</ComboBoxItem>
                                                                            <ComboBoxItem>ALC造</ComboBoxItem>
                                                                            <ComboBoxItem>プレキャストコンクリート(PC)造</ComboBoxItem>
                                                                            <ComboBoxItem>鉄骨プレキャストコンクリート(HPC)造</ComboBoxItem>
                                                                            <ComboBoxItem>鉄筋ブロック造</ComboBoxItem>
                                                                            <ComboBoxItem>コンクリート充填鋼管(CFT)造</ComboBoxItem>
                                                                            <ComboBoxItem>その他</ComboBoxItem>
                                                                        </ComboBox>
                                                                    </GroupBox>

                                                                </StackPanel>

                                                            </StackPanel>

                                                            <StackPanel Margin="6 0 6 0">

                                                                <GroupBox Header="築年月" Padding="6" Style="{DynamicResource GroupBoxStyle}">

                                                                    <StackPanel Orientation="Horizontal">

                                                                        <StackPanel Margin="0 0 12 0">
                                                                            <Label Content="和暦" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <ComboBox Width="60" Margin="6" SelectedIndex="-1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                                                    <ComboBoxItem>令和</ComboBoxItem>
                                                                                    <ComboBoxItem>平成</ComboBoxItem>
                                                                                    <ComboBoxItem>昭和</ComboBoxItem>
                                                                                    <ComboBoxItem>大正</ComboBoxItem>
                                                                                    <ComboBoxItem>明治</ComboBoxItem>
                                                                                </ComboBox>

                                                                                <TextBox Width="33" Margin="3 0 3 6" VerticalAlignment="Bottom" />
                                                                                <Label VerticalAlignment="Bottom" Margin="0 0 3 6" Content="年" Style="{DynamicResource DefaultLabelStyle}" />

                                                                                <TextBox Width="33" Margin="3 0 3 6" VerticalAlignment="Bottom" />
                                                                                <Label VerticalAlignment="Bottom" Margin="0 0 3 6" Content="月" Style="{DynamicResource DefaultLabelStyle}" />
                                                                            </StackPanel>
                                                                        </StackPanel>

                                                                        <StackPanel>
                                                                            <Label Content="西暦" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                            <DatePicker Width="96" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Center" common:DatePickerCalendar.IsMonthYear="True" common:DatePickerDateFormat.DateFormat="yyyy/MMM"/>
                                                                        </StackPanel>

                                                                    </StackPanel>

                                                                </GroupBox>

                                                            </StackPanel>
                                                            
                                                            <StackPanel Margin="6 0 6 0">
                                                                
                                                                <GroupBox Header="規模" Padding="6" Style="{DynamicResource GroupBoxStyle}">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <StackPanel>
                                                                                <Label Content="地上" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                                <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                                    <TextBox Text="{Binding RentLivingEdit.Floors, UpdateSourceTrigger=PropertyChanged}" Width="42" Margin="0 0 3 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                                    <Label Content="階" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                            <StackPanel>
                                                                                <Label Content="地下" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                                <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                                    <TextBox Text="{Binding RentLivingEdit.FloorsBasement, UpdateSourceTrigger=PropertyChanged}" Width="42" Margin="0 0 3 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                                    <Label Content="階" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>

                                                                        <StackPanel Margin="12 0 0 0">
                                                                            <Label Content="総戸数" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                            <StackPanel Orientation="Horizontal" Margin="6 6 12 0">
                                                                                <TextBox Text="" Width="42" Margin="0 0 3 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                                <Label Content="戸" VerticalAlignment="Bottom" Margin="0 0 3 6" Style="{DynamicResource DefaultLabelStyle}"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                        
                                                                    </StackPanel>
                                                                </GroupBox>

                                                            </StackPanel>

                                                            <StackPanel Margin="6 0 6 0">

                                                                <GroupBox Header="登録情報" Padding="6" Style="{DynamicResource GroupBoxStyle}">
                                                                    <StackPanel Orientation="Horizontal">
