<Window x:Class="ZumenSearch.Views.RentLivingBuildingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZumenSearch.Views"
        xmlns:common="clr-namespace:ZumenSearch.Common"
        xmlns:helper="clr-namespace:ZumenSearch.Helper"
        xmlns:vms="clr-namespace:ZumenSearch.ViewModels" 
        xmlns:models="clr-namespace:ZumenSearch.Models" 
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vms:RentLivingBuildingViewModel}"
        SnapsToDevicePixels="true"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="0"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundColorBrush}"
        Width="1024" Height="670"
        MinWidth="1024" MinHeight="670"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="0"/>
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource WindowMainPanelStyle}">
        <Grid x:Name="BackgroundGrid" Background="{DynamicResource WindowBackgroundColorBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1000"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- アプリタイトルバー -->
            <Grid x:Name="AppTitleBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Window icon/title -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Label Content="賃貸住居用物件：建物情報" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6 0 6 0" />
                    <TextBlock Text="{Binding RentLivingEdit.StatusIsNew}" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.6" Margin="6 0 6 0"/>
                    <TextBlock Text="{Binding RentLivingEdit.StatusIsDirty}" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.6" Margin="6 0 6 0"/>
                </StackPanel>

                <!-- Info space -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    
                </StackPanel>

                <!-- System icons -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Margin="0">

                    <Button x:Name="SaveButton" Style="{DynamicResource PathSysButton}" Command="{Binding SaveCommand}" ToolTip="登録" Content="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"></Button>

                    <Button x:Name="MinimizeButton" Style="{StaticResource PathSysButton}" Click="MinimizeButton_Click" Visibility="Collapsed">
                        M20,14H4V10H20
                    </Button>

                    <Button x:Name="RestoreButton" Style="{StaticResource PathSysButton}" Click="RestoreButton_Click" Visibility="Collapsed">
                        M4,8H8V4H20V16H16V20H4V8M16,8V14H18V6H10V8H16M6,12V18H14V12H6Z
                    </Button>

                    <Button x:Name="MaxButton" Style="{StaticResource PathSysButton}" Click="MaxButton_Click" Visibility="Collapsed">
                        M4,4H20V20H4V4M6,8V18H18V8H6Z
                    </Button>

                    <Button x:Name="CloseButton" Style="{StaticResource PathSysButtonClose}" Click="CloseButton_Click">
                        M13.46,12L19,17.54V19H17.54L12,13.46L6.46,19H5V17.54L10.54,12L5,6.46V5H6.46L12,10.54L17.54,5H19V6.46L13.46,12Z
                    </Button>

                </StackPanel>

            </Grid>

            <!-- エラー通知エリア -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Visibility="{Binding ShowErrorDialog, Converter={StaticResource BoolToVisibilityCollapsedConverter}}" Background="#FFDFD991">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBox Padding="3" Margin="6" Text="{Binding ErrorText,Mode=OneWay}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch"></TextBox>
                <Button x:Name="ButtonCloseErrorDialog" FontFamily="Segoe UI Symbol" Content="&#57610;" Command="{Binding CloseErrorCommand}" Grid.Row="0" Grid.Column="1" Width="24" Padding="3" Margin="6" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
                <!-- Symbol Enum
             https://docs.microsoft.com/en-us/uwp/api/windows.ui.xaml.controls.symbol?view=winrt-19041
            -->
            </Grid>

            <!-- 賃貸物件住居用の編集 -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1000"/>
                </Grid.ColumnDefinitions>

                <TabControl Grid.Row="0" Grid.Column="0" Margin="0 0 0 12">
                    
                    <!-- 概要 -->
                    <TabItem Width="120">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                                <Label Content="概要" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Style>
                            <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource DefaultTabItem}">
                                <Setter Property="OverridesDefaultStyle" Value="False" />
                            </Style>
                        </TabItem.Style>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left pane -->
                            <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="271"/>
                                        <ColumnDefinition Width="271"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 物件名 -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="6 0 6 0">

                                        <GroupBox Header="物件名" Padding="6">
                                            <StackPanel>
                                                <TextBox Text="{Binding RentLivingEdit.Name, UpdateSourceTrigger=PropertyChanged}" Margin="6" HorizontalAlignment="Stretch"></TextBox>
                                            </StackPanel>
                                        </GroupBox>

                                    </StackPanel>

                                    <!-- 物件種目 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="6 0 6 0">

                                        <GroupBox Header="物件種目" Padding="6">
                                            <ComboBox SelectedIndex="-1" Margin="6">
                                                <ComboBoxItem>アパート</ComboBoxItem>
                                                <ComboBoxItem>マンション</ComboBoxItem>
                                                <ComboBoxItem>一戸建て</ComboBoxItem>
                                                <ComboBoxItem>テラスハウス</ComboBoxItem>
                                                <ComboBoxItem>タウンハウス</ComboBoxItem>
                                                <ComboBoxItem>シェアハウス</ComboBoxItem>
                                                <ComboBoxItem>寮・下宿</ComboBoxItem>
                                            </ComboBox>
                                        </GroupBox>
                                    </StackPanel>

                                    <!-- 所在地 -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="6 0 6 0">

                                        <GroupBox Header="所在地" Padding="6">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBox Text="" IsReadOnly="True" Margin="6" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"></TextBox>
                                                </StackPanel>
                                                <StackPanel Grid.Row="0" Grid.Column="1">
                                                    <Button VerticalAlignment="Bottom" Content="+" Width="24" Height="24" Margin="6" />
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="所在地" Padding="6" Visibility="Collapsed">
                                            <StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel>
                                                        <Label Content="〒"/>
                                                        <TextBox Text="{Binding RentLivingEdit.PostalCode, UpdateSourceTrigger=PropertyChanged}" Margin="6 0 6 6" Width="66" HorizontalAlignment="Left"></TextBox>
                                                    </StackPanel>

                                                    <StackPanel>
                                                        <Label Content="都道府県"/>
                                                        <TextBox Text="{Binding RentLivingEdit.Location, UpdateSourceTrigger=PropertyChanged}" Margin="6 0 6 6" Width="90" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
                                                        <ComboBox Margin="6 0 6 6" Width="90" HorizontalAlignment="Left">

                                                        </ComboBox>
                                                    </StackPanel>

                                                </StackPanel>

                                                <StackPanel>
                                                    <Label Content="市区町村"/>
                                                    <TextBox Text="" Margin="6 0 6 6" Width="169" HorizontalAlignment="Left"></TextBox>
                                                </StackPanel>

                                                <StackPanel>
                                                    <Label Content="町域"/>
                                                    <TextBox Text="" Margin="6 0 6 6" Width="200" HorizontalAlignment="Left"></TextBox>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel>
                                                        <Label Content="字・丁目"/>
                                                        <TextBox Text="" Margin="6 0 6 6" Width="169" HorizontalAlignment="Left"></TextBox>
                                                    </StackPanel>

                                                </StackPanel>

                                                <StackPanel>
                                                    <Label Content="番地・号"/>
                                                    <TextBox Text="" Margin="6 0 6 6" Width="110" HorizontalAlignment="Left"></TextBox>
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>

                                    </StackPanel>

                                    <!-- 交通１・２・３ -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.RowSpan="4" Margin="6 0 6 0">
                                        <TabControl Height="420" Margin="0 12 0 0">
                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                                                        <Label Content="交通１" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <TabItem.Style>
                                                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource DefaultTabItem}">
                                                        <Setter Property="OverridesDefaultStyle" Value="False" />
                                                    </Style>
                                                </TabItem.Style>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <StackPanel>
                                                        <GroupBox Grid.Row="0" Grid.Column="0" Header="電車" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="沿線"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅"/>
                                                                <TextBox Text="{Binding RentLivingEdit.TrainStation1}" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>

                                                            </StackPanel>
                                                        </GroupBox>
                                                        <GroupBox Grid.Row="0" Grid.Column="0" Header="バス" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="バス停名"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="バス停から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </GroupBox>
                                                    </StackPanel>

                                                </ScrollViewer>

                                            </TabItem>
                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                                                        <Label Content="交通２" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <TabItem.Style>
                                                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource DefaultTabItem}">
                                                        <Setter Property="OverridesDefaultStyle" Value="False" />
                                                    </Style>
                                                </TabItem.Style>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto">

                                                    <StackPanel>
                                                        <GroupBox Grid.Row="0" Grid.Column="1" Header="電車" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="沿線"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅"/>
                                                                <TextBox Text="{Binding RentLivingEdit.TrainStation2}" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>

                                                            </StackPanel>
                                                        </GroupBox>
                                                        <GroupBox Grid.Row="0" Grid.Column="1" Header="バス" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="バス停名"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="バス停から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </GroupBox>
                                                    </StackPanel>

                                                </ScrollViewer>

                                            </TabItem>
                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                                                        <Label Content="交通３" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <TabItem.Style>
                                                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource DefaultTabItem}">
                                                        <Setter Property="OverridesDefaultStyle" Value="False" />
                                                    </Style>
                                                </TabItem.Style>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto">

                                                    <StackPanel>
                                                        <GroupBox Grid.Row="0" Grid.Column="2" Header="電車" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="沿線"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="最寄り駅から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>

                                                            </StackPanel>
                                                        </GroupBox>
                                                        <GroupBox Grid.Row="0" Grid.Column="2" Header="バス" Padding="6" Margin="6 0 6 0">
                                                            <StackPanel>
                                                                <Label Content="バス停名"/>
                                                                <TextBox Text="" Margin="6 0 12 6" HorizontalAlignment="Stretch"></TextBox>

                                                                <Label Content="バス停から徒歩"/>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBox Text="" Width="60" Margin="6 0 3 6" HorizontalAlignment="Left"></TextBox>
                                                                    <Label Content="分" VerticalAlignment="Bottom"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </GroupBox>
                                                    </StackPanel>

                                                </ScrollViewer>

                                            </TabItem>

                                        </TabControl>
                                    </StackPanel>

                                    <!-- 建物構造・設備 -->
                                    <StackPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="4" Margin="6 0 6 0">
                                        <TabControl Height="420" Margin="0 12 0 0">
                                            <!-- 建物構造 -->
                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3">
                                                        <Label Content="建物" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <TabItem.Style>
                                                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource DefaultTabItem}">
                                                        <Setter Property="OverridesDefaultStyle" Value="False" />
                                                    </Style>
                                                </TabItem.Style>

                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <StackPanel>

                                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="6 0 6 0">

                                                            <GroupBox Header="所有区分" Padding="6">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <RadioButton Content="建物一棟" GroupName="OwnershipType" IsChecked="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.All}, Converter={StaticResource EnumBooleanConverter}}" Margin="6"/>
                                                                    <RadioButton x:Name="RadioButtonOwnershipType" Content="区分所有" GroupName="OwnershipType" IsChecked="{Binding Path=RentLivingEdit.Ownership, ConverterParameter={x:Static models:Ownerships.Unit}, Converter={StaticResource EnumBooleanConverter}}" Margin="6"/>
                                                                </StackPanel>
                                                            </GroupBox>

                                                            <GroupBox Header="建物管理" Padding="6" Visibility="Collapsed">
                                                                <StackPanel>
                                                                    <RadioButton Content="自社管理" Margin="6"/>
                                                                    <RadioButton Content="貸主管理" Margin="6"/>
                                                                    <RadioButton Content="他社管理" Margin="6"/>
                                                                    <RadioButton Content="他" Margin="6"/>
                                                                </StackPanel>
                                                            </GroupBox>

                                                            <!-- 区分所有なら非表示にする -->
                                                            <GroupBox Header="元付け" Padding="6" Visibility="Collapsed">
                                                                <GroupBox.Style>
                                                                    <Style>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=RadioButtonOwnershipType, Path=IsChecked}" Value="True">
                                                                                <Setter Property="GroupBox.Visibility" Value="Hidden"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </GroupBox.Style>
                                                                <StackPanel>
                                                                    <RadioButton Content="自社元付" Margin="6"/>
                                                                    <RadioButton Content="仲介先物" Margin="6"/>
                                                                </StackPanel>
                                                            </GroupBox>

                                                            <GroupBox Header="取引態様" Padding="6" Visibility="Collapsed">

                                                                <TabControl>
                                                                    <TabItem Header="自社元付" Padding="6">
                                                                        <StackPanel>
                                                                            <RadioButton Content="一般媒介" Margin="6"/>
                                                                            <RadioButton Content="専任媒介" Margin="6"/>
                                                                            <RadioButton Content="専属専任媒介" Margin="6"/>
                                                                            <RadioButton Content="代理" Margin="6"/>
                                                                            <RadioButton Content="貸主" Margin="6"/>
                                                                        </StackPanel>
                                                                    </TabItem>
                                                                    <TabItem Header="先物仲介" Padding="6">
                                                                        <StackPanel>
                                                                            <RadioButton Content="一般媒介" Margin="6"/>
                                                                            <RadioButton Content="専任媒介" Margin="6"/>
                                                                            <RadioButton Content="専属専任媒介" Margin="6"/>
                                                                            <RadioButton Content="代理" Margin="6"/>
                                                                            <RadioButton Content="貸主" Margin="6"/>
                                                                        </StackPanel>
                                                                    </TabItem>
                                                                </TabControl>
                                                            </GroupBox>

                                                            <GroupBox Header="登録情報" Padding="6" Visibility="Collapsed">
                                                                <StackPanel>
                                                                    <StackPanel>
                                                                        <Label Content="更新日"/>
                                                                        <DatePicker Width="115" Margin="6 0 12 6" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="True"/>
                                                                    </StackPanel>
                                                                    <StackPanel Visibility="Collapsed">
                                                                        <Label Content="登録日"/>
                                                                        <DatePicker Width="115" Margin="6 0 12 6" HorizontalAlignment="Left" VerticalAlignment="Center" IsEnabled="True"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </GroupBox>

                                                        </StackPanel>

                                                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="6 0 6 0">
                                                            <GroupBox Header="建物構造" Padding="6">
                                                                <ComboBox SelectedIndex="-1" Margin="6">
                                                                    <ComboBoxItem>木造</ComboBoxItem>
                                                                    <ComboBoxItem>ブロック造</ComboBoxItem>
                                                                    <ComboBoxItem>軽量鉄骨造</ComboBoxItem>
                                                                    <ComboBoxItem>鉄骨造</ComboBoxItem>
                                                                    <ComboBoxItem>鉄筋コンクリート(RC)造</ComboBoxItem>
                                                                    <ComboBoxItem>鉄骨鉄筋コンクリート(SRC)造</ComboBoxItem>
                                                                    <ComboBoxItem>ALC造</ComboBoxItem>
                                                                    <ComboBoxItem>プレキャストコンクリート(PC)造</ComboBoxItem>
                                                                    <ComboBoxItem>鉄骨プレキャストコンクリート(HPC)造</ComboBoxItem>
                                                                    <ComboBoxItem>鉄筋ブロック造</ComboBoxItem>
                                                                    <ComboBoxItem>コンクリート充填鋼管(CFT)造</ComboBoxItem>
                                                                    <ComboBoxItem>その他</ComboBoxItem>
                                                                </ComboBox>
                                                            </GroupBox>
                                                        </StackPanel>

                                                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="6 0 6 0">
                                                            <GroupBox Header="規模" Padding="6">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="2*"/>
                                                                        <ColumnDefinition Width="1*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                                                        <StackPanel>
                                                                            <Label Content="地上"/>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <TextBox Text="{Binding RentLivingEdit.Floors, UpdateSourceTrigger=PropertyChanged}" Width="42" Margin="6 0 0 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                                <Label Content="階" VerticalAlignment="Bottom"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                        <StackPanel>
                                                                            <Label Content="地下"/>
                                                                            <StackPanel Orientation="Horizontal">
                                                                                <TextBox Text="{Binding RentLivingEdit.FloorsBasement, UpdateSourceTrigger=PropertyChanged}" Width="42" Margin="6 0 0 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                                <Label Content="階" VerticalAlignment="Bottom"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                                                        <Label Content="総戸数"/>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox Text="" Width="42" Margin="6 0 0 6" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                                                                            <Label Content="戸" VerticalAlignment="Bottom"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </GroupBox>

                                                        </StackPanel>

                                                        <StackPanel Grid.Row="4" Grid.Column="1" Margin="6 0 6 0">
                                                            <GroupBox Header="築年月" Padding="6">
                                                                <StackPanel>
                                                                    <StackPanel Margin="0 0 12 0">
                                                                        <Label Content="築年月（和暦）"/>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <ComboBox Width="60" Margin="6 0 0 6" SelectedIndex="-1">
                                                                                <ComboBoxItem>令和</ComboBoxItem>
                                                                                <ComboBoxItem>平成</ComboBoxItem>
                                                                                <ComboBoxItem>昭和</ComboBoxItem>
                                                                                <ComboBoxItem>大正</ComboBoxItem>
                                                                                <ComboBoxItem>明治</ComboBoxItem>
                                                                            </ComboBox>

                                                                            <TextBox Width="33" Margin="9 0 0 6" VerticalAlignment="Bottom" />
                                                                            <Label VerticalAlignment="Bottom" Content="年" />

                                                                            <TextBox Width="33" Margin="3 0 0 6" VerticalAlignment="Bottom" />
